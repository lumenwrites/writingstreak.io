{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    // for prisma:seed to work
    // I changed it from this: "module": "esnext" to this: "module": "commonjs"
    //"module": "esnext",
    // https://stackoverflow.com/questions/59162625/syntaxerror-unexpected-token-export-in-nodejs-project-with-typescript-and-web
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "backend/processContent.mjs",
    "backend/processContent.mjs",
    "backend/json/processContent.js",
    "backend/json/mdx.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
